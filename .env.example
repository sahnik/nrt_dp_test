# Kafka Configuration (Confluent Cloud)
KAFKA__BOOTSTRAP_SERVERS=your-cluster.confluent.cloud:9092
KAFKA__API_KEY=your-api-key
KAFKA__API_SECRET=your-api-secret
KAFKA__TOPIC_SOURCE=data-ingestion
KAFKA__TOPIC_SINK=data-processed
KAFKA__CONSUMER_GROUP=pipeline-consumer-group
KAFKA__AUTO_OFFSET_RESET=earliest

# MongoDB Configuration (MongoDB Atlas)
MONGODB__CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB__DATABASE=pipeline_db
MONGODB__COLLECTION=processed_data

# Pipeline Configuration
PIPELINE__BATCH_SIZE=100
PIPELINE__MAX_WORKERS=10
PIPELINE__RETRY_COUNT=3
PIPELINE__RETRY_DELAY_SECONDS=5

# Test Data Generator Configuration
TEST_DATA__RATE=10
TEST_DATA__PATTERN=mixed
# TEST_DATA__TOTAL_RECORDS=100  # Optional: limit total records
TEST_DATA__INVALID_RATIO=0.1

# Logging Configuration
LOGGING__LEVEL=INFO
LOGGING__FORMAT=json  # json or text